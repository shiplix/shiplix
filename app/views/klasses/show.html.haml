- breadcrumb :klass, @repo, @klass

- content_for(:header_icon, 'fa-code')

.row
  .col-md-12
    .form-group
      - @klass.smells_statistics.each do |name, count|
        - smell_class = "#{name}Decorator".constantize
        %button.btn.btn-primary
          %i.fa{class: smell_class.icon}
          = smell_class.title
          &nbsp;
          %span.badge= count

    - @klass.source_files.each do |source_file|
      .panel.panel-warning
        .panel-heading
          %h3.panel-title= source_file.path

          %ul.panel-controls
            %li
              %a.panel-fullscreen{href: "#"}
                %i.fa.fa-expand
            %li
              %a.panel-collapse{href: ""}
                %i.fa.fa-angle-down

          .shiplix-source.panel-body{data: {smells: @klass.smells.source_grouped[source_file.path].to_json}}
            %pre
              %code{class: 'ruby'}
                = preserve do
                  = source_file.content
