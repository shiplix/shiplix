- content_for(:header_icon, 'fa-file-text-o')

.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        .panel-title-box
          %h3 Classes & files
          %span Classes list

        %ul.panel-controls
          %li{style: 'width: 300px;'}
            %input.form-control.ui-autocomplete-input{placeholder: 'Search by class name...', autocomplete: 'off'}
          %li
            %a.panel-fullscreen{href: '#'}
              %i.fa.fa-expand
          %li
            %a.panel-refresh{href: '#'}
              %i.fa.fa-refresh

      .panel-body.panel-body-table
        .table-responsive
          %table.table.table-bordered.table-striped
            %thead
              %tr
                %th{style: 'width: 90px'} Marks
                %th Class name
                %th{style: 'width: 90px'} Complexity
                %th{style: 'width: 90px'} LOC
                %th{style: 'width: 90px'} Smells
            %tbody
              - if @klasses.present?
                = render(@klasses)
              - else
                There is no classes yet.

        .panel-footer
          - if @klasses.present?
            = will_paginate @klasses, renderer: BootstrapPagination::Rails
